@using CustomUserRoll.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "_AccountLayout";
}

<div class="account-container">
    <div class="account-box">
        <div class="col">
            <h2 class="text-center display-6">Verify Email</h2>
            <form asp-action="VerifyEmail" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" value="Verify" class="btn btn-success w-100 p-2">Verify Email</button>
                <p class="text-center mt-2">
                    If you haven't received an email, you can <a asp-action="ResendVerificationEmail" class="text-decoration-none">resend it here</a>.
                </p>
                <div class="text-center">
                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none mt-3">Back</a>
                </div>
            </form>
        </div>
    </div>
